<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
       <item name="android:colorBackground">@color/background_material_light</item>
    </style>


    <style name="LightTheme">
        <item name="colorPrimary">#eae9e9</item>
        <item name="colorPrimaryDark">#797070</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#e2e2da</item>

    </style>


    <style name="FontCasual">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">casual</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>


    <style name="FontMonospace">
        <item name="colorPrimary">#eae9e9</item>
        <item name="colorPrimaryDark">#797070</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#e2e2da</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">monospace</item>
    </style>






</resources>
